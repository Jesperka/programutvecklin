// Get data from smhi
String SmhiData(int city) {
  // Stadsnamn och koordinater
  String cityNames[3] = {"Karlskrona", "Goteborg", "Stockholm"};
  String urls[3] = {
    "https://opendata-download-metfcst.smhi.se/api/category/pmp3g/version/2/geotype/point/lon/15.59/lat/56.18/data.json", // Karlskrona
    "https://opendata-download-metfcst.smhi.se/api/category/pmp3g/version/2/geotype/point/lon/11.97/lat/57.7/data.json",  // G√∂teborg
    "https://opendata-download-metfcst.smhi.se/api/category/pmp3g/version/2/geotype/point/lon/18.07/lat/59.32/data.json"  // Stockholm
  };

  // Kontrollera giltigt index
  if (city < 0 || city > 2) {
    return "Invalid city index";
  }

  String cityName = cityNames[city];
  String url = urls[city];

  Serial.println("üì° H√§mtar v√§derdata fr√•n SMHI f√∂r: " + cityName);
  Serial.println("üåê URL: " + url);

  HTTPClient http;
  http.begin(url);
  int httpCode = http.GET();

  if (httpCode != 200) {
    Serial.println("‚ùå HTTP-fel: " + String(httpCode));
    http.end();
    return "HTTP error";
  }

  String payload = http.getString();
  http.end();

  // Stor buffert kr√§vs f√∂r SMHI:s JSON (runt 90-100 KB)
  DynamicJsonDocument doc(160000);
  DeserializationError error = deserializeJson(doc, payload);

  if (error) {
    Serial.println("‚ùå JSON parse error: " + String(error.c_str()));
    return "JSON error";
  }

  JsonArray timeSeries = doc["timeSeries"];
  if (timeSeries.isNull() || timeSeries.size() == 0) {
    Serial.println("‚ö†Ô∏è Inga timeSeries-data tillg√§ngliga");
    return "No data";
  }

  // Loopar √∂ver de f√∂rsta 3 tidspunkterna och letar efter temperatur
  for (int i = 0; i < min(3, (int)timeSeries.size()); i++) {
    JsonArray parameters = timeSeries[i]["parameters"];
    for (JsonObject param : parameters) {
      if (param["name"] == "t") {
        float temperature = param["values"][0];
        Serial.printf("üå°Ô∏è Temperatur hittad: %.1f¬∞C\n", temperature);
        return cityName + ": " + String(temperature, 1) + "¬∞C";
      }
    }
  }

  Serial.println("‚ö†Ô∏è Ingen temperatur hittad i de f√∂rsta datapunkterna");
  return "Temp not found";
}











